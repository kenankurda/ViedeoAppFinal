@model IEnumerable<ViedeoAppFinal.Models.Video>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres.GenreId)
                @Html.DisplayNameFor(model => model.Genres.Name)
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres.GenreId)
                @Html.DisplayFor(modelItem => item.Genres.Name)
            </td>
            <th>
                <img src="@Html.DisplayFor(modelItem => item.CoverImageUrl)" width="150" height="150" />
            </th>
            <td>
                <a asp-action="UpdateVideo" asp-route-id="@item.VideoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VideoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VideoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
